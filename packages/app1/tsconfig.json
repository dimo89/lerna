{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "lib": [
      "dom",
      "es2016"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "typings/*.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}